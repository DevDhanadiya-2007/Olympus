{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "rootDir": "./backend",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@backend/*": [
                "backend/*"
            ]
        }
    },
    "include": [
        "backend/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}